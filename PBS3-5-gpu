export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/cuda/lib64
export CUDA_HOME=/usr/local/cuda

export CUDA_VISIBLE_DEVICES=$(cat $TMPDIR/cuda_device)
module load cuda/cuda-7.0

cd /home/qchen39/Apo/
